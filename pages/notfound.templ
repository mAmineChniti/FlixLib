package pages

import "github.com/mAmineChniti/FlixLib/components"

templ NotFound() {
	@components.Layout("FlixLib") {
		<div class="text-center mt-48">
			<h1 class="text-4xl font-bold text-red-600">404 - Page Not Found</h1>
			<p class="text-lg text-gray-600 mt-4">Sorry, the page you are looking for does not exist.</p>
			<a href="/" class="text-blue-500 hover:text-blue-700 mt-6 inline-block">Go back Home</a>
		</div>
	}
}
